<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header text-center">
          <h1>ログイン</h1>
        </div>
        <div class="card-body">
          <%= form_with data: { controller: "auth", action: "submit->auth#loginWithEmailAndPassword:prevent" } do |f| %>
            <div class="mb-3">
              <%= f.label :email, 'メールアドレス', class: 'form-label' %>
              <%= f.text_field :email, placeholder: "email",class: 'form-control', data: { auth_target: "email"} %>
            </div>

            <div class="mb-3">
              <%= f.label :password, 'パスワード', class: 'form-label' %>
              <%= f.password_field :password,class: 'form-control', placeholder: "password", data: { auth_target: "password"} %>
            </div>

            <div class="d-grid">
              <%= f.submit 'ログイン', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div>
  <small style="display: block; text-align: center;">
    アカウントをお持ちでない方は<%= link_to '新規登録', new_user_path %>
  </small>
</div>
