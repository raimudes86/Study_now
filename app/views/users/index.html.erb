<div data-controller="get-all-users">
  <h2>ユーザー一覧</h2>
  <div data-get-all-users-target="output">ユーザーデータを読み込んでいます...</div>
</div>

<%= @users.each do |user| %>
  <% if @user.following?(user) %>
    <%= link_to "フォロー外す", relationships_path(user.id), method: :delete %>
  <% else %>
  <%= form_with(url: relationships_path(user_id: user.id), method: :post) do %>
    <%= submit_tag "フォローする" %>
  <% end %>
  <% end %>
<% end %>

